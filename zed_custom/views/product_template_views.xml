<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <record id="product_template_form_zed" model="ir.ui.view">
    <field name="name">product.template.form.zed</field>
    <field name="model">product.template</field>
    <field name="inherit_id" ref="product.product_template_only_form_view"/>
    <field name="arch" type="xml">
      <xpath expr="//sheet/notebook" position="inside">
        <page string="Zed Inventory">
          <group>
            <field name="zed_type"/>
            <!-- Thay is_consumable bằng type (consu/product/service) -->
            <field name="type"/>
            <!-- (tuỳ chọn) nếu muốn gán công thức ngay ở sản phẩm -->
            <field name="zed_recipe_id"/>
          </group>
        </page>
      </xpath>
    </field>
  </record>
</odoo>
